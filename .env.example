# OpenAI API Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TIMEOUT_MS=15000
OPENAI_MAX_RETRIES=2

# OpenAI Circuit Breaker
OPENAI_CIRCUIT_TIMEOUT=60000
OPENAI_CIRCUIT_ERROR_THRESHOLD=50
OPENAI_CIRCUIT_VOLUME_THRESHOLD=10

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=http://localhost:3001
SESSION_SECRET=change-me

# Database Configuration
DATABASE_PATH=./data/10q.db
DATA_STORE=sqlite

# Observability
SLOW_QUERY_MS=200
LOG_LEVEL=info
METRICS_TOKEN=change-me

# Rate limiting & timeouts
RESPONSE_RATE_LIMIT_WINDOW_MS=60000
RESPONSE_RATE_LIMIT_MAX=30
MAX_CONCURRENT_SUBMISSIONS=5

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback
SUPERADMIN_EMAIL=you@example.com
